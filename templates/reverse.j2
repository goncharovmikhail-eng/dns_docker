$TTL 86400
@       IN      SOA     ns.{{ zones_name }}. admin.{{ zones_name }}. (
                      2025061101 ; Serial
                      604800      ; Refresh
                      86400       ; Retry
                      2419200     ; Expire
                      604800 )    ; Negative Cache TTL

; NS
@       IN      NS      ns.{{ zones_name }}.

; A record for NS (важно, чтобы не ругался)
ns.{{ zones_name }}.    IN    A    {{ default_ip }}

; PTR records
{% for octet, fqdn in ptr_records %}
{{ octet }}    IN      PTR     {{ fqdn }}
{% endfor %}
